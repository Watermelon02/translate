<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox maxHeight="560.0" maxWidth="520.0" minHeight="560.0" minWidth="520.0" prefHeight="560.0" prefWidth="520.0"
      xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.experiment.translate.controller.TranslateController">
    <children>
        <VBox prefHeight="400.0" prefWidth="300.0">
            <children>
                <HBox prefHeight="40.0" prefWidth="244.0"/>
                <TextArea fx:id="text_input" prefHeight="516.0" prefWidth="295.0" promptText="请输入文字、文档、网址或粘连图片 即可翻译"/>
            </children>
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </VBox>
        <VBox prefHeight="400.0" prefWidth="310.0">
            <children>
                <HBox prefHeight="40.0" prefWidth="254.0">
                    <children>
                        <VBox fx:id="translate_btn" alignment="CENTER" maxWidth="209.0" minWidth="100.0"
                              prefHeight="39.0" prefWidth="114.0" styleClass="background-translate-btn">
                            <children>
                                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="translate"
                                      textAlignment="CENTER" wrappingWidth="121.0">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                </Text>
                            </children>
                            <HBox.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </HBox.margin>
                        </VBox>
                    </children>
                </HBox>
                <TextArea fx:id="text_output" editable="false" focusTraversable="false" prefHeight="516.0"
                          prefWidth="295.0"/>
            </children>
            <HBox.margin>
                <Insets left="10.0"/>
            </HBox.margin>
        </VBox>
    </children>
</HBox>
